{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "sensitive" : "true"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "eu-west-2",
      "source_ami": "ami-04097396cd89b141d",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 100,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "dq-peering-haproxy {{isotime | clean_ami_name}}",
      "ami_users": [
        "483846886818",
        "337779336338"
      ]
    }
  ],
  "provisioners": [
    {
            "type": "shell",
            "inline": [
                "sleep 30",
                "echo \"export user_access_key=\"{{user `access_key`}}\"\" > ~/passwordExport",
                "echo \"export user_secret_key=\"{{user `secret_key`}}\"\" > ~/passwordExport"
            ]
    },
    {
      "type": "ansible",
      "sftp_command": "/usr/libexec/openssh/sftp-server",
      "command": "source ~/passwordExport && ansible-playbook",
      "playbook_file": "./playbook.yml",
      "playbook_dir": ".",
      "extra_arguments": [
                "--extra-vars", "'ansible_python_interpreter: /usr/libexec/platform-python' ansible_shell_type=sh",
                "--access_key=ansible-access-password.py",
                "--secret_key=ansible-secret-password.py"
            ] 
    }
  ]
}
