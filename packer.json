{
  "variables": {
    "region":  "{{env `AWS_DEFAULT_REGION`}}",
    "drone_build_number": "{{env `DRONE_BUILD_NUMBER`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "RHEL-8.*",
          "architecture": "x86_64"
        },
        "owners": [
          "309956199498"
        ],
        "most_recent": true
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 100,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "instance_type": "t3.large",
      "ssh_username": "ec2-user",
      "ami_name": "dq-peering-haproxy {{user `drone_build_number`}}",
      "ami_users": [
        "483846886818",
        "337779336338"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "extra_arguments": [
        "-v",
        "--extra-vars", "ansible_shell_type=sh",
        "--ssh-extra-args", "-o IdentitiesOnly=yes -o 'HostKeyAlgorithms=+ssh-rsa' -o 'PubkeyAcceptedAlgorithms=+ssh-rsa'",
        "--scp-extra-args", "'-O'"
      ]
    }
  ]
}
