{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "region":  "{{env `AWS_DEFAULT_REGION`}}",
    "drone_build_number": "{{env `DRONE_BUILD_NUMBER`}}"
  },
  "sensitive-variables": ["access_key", "secret_key"],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "cloudimg-redhat8*"
        },
        "owners": [
          "679593333241"
        ],
        "most_recent": true
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 100,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "instance_type": "t3.large",
      "ssh_username": "ec2-user",
      "ami_name": "dq-peering-haproxy {{user `drone_build_number`}}",
      "ami_users": [
        "483846886818",
        "337779336338"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "sftp_command": "/usr/libexec/openssh/sftp-server",
      "playbook_file": "./playbook.yml",
      "extra_arguments": [
        "--extra-vars", "'ansible_python_interpreter: /usr/libexec/platform-python' ansible_shell_type=sh user_access_key={{user `access_key`}} secret_access_key={{user `secret_key`}}",
        "--ssh-extra-args", "-o IdentitiesOnly=yes -o 'HostKeyAlgorithms=+ssh-rsa' -o 'PubkeyAcceptedAlgorithms=+ssh-rsa'",
        "--scp-extra-args", "'-O'"
      ]
    }
  ]
}
