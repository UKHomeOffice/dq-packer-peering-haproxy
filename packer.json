{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "sensitive" : "true",
    "drone_build_number": "{{env `DRONE_BUILD_NUMBER`}}"
  },
  "sensitive-variables": ["user_access_key", "secret_access_key"],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "eu-west-2",
      "source_ami": "ami-04097396cd89b141d",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 100,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "instance_type": "t3.medium",
      "ssh_username": "ec2-user",
      "ami_name": "dq-peering-haproxy {{user `drone_build_number`}}",
      "ami_users": [
        "483846886818",
        "337779336338"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "sftp_command": "/usr/libexec/openssh/sftp-server",
      "playbook_file": "./playbook.yml",
      "extra_arguments": [
        "--extra-vars", "'ansible_python_interpreter: /usr/libexec/platform-python' ansible_shell_type=sh access_key={{user `access_key`}} secret_key={{user `secret_key`}}",
        "--ssh-extra-args", "-o IdentitiesOnly=yes -o 'HostKeyAlgorithms=+ssh-rsa' -o 'PubkeyAcceptedAlgorithms=+ssh-rsa'",
        "--scp-extra-args", "'-O'"
      ]
    }
  ]
}
